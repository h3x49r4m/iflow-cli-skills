{"$schema": "http://json-schema.org/draft-07/schema#", "title": "Git Manage Configuration", "description": "Configuration for git-manage skill behavior", "type": "object", "properties": {"pre_commit_checks": {"type": "boolean", "description": "Enable or disable all pre-commit checks", "default": true}, "run_tests": {"type": "boolean", "description": "Run test suite before commit", "default": true}, "run_architecture_check": {"type": "boolean", "description": "Run architecture check before commit", "default": true}, "run_tdd_check": {"type": "boolean", "description": "Run TDD enforcement check before commit", "default": true}, "check_coverage": {"type": "boolean", "description": "Verify test coverage threshold before commit", "default": true}, "detect_secrets": {"type": "boolean", "description": "Scan for secrets in staged files", "default": true}, "branch_protection": {"type": "boolean", "description": "Prevent direct commits to protected branches", "default": true}, "protected_branches": {"type": "array", "description": "List of protected branch names", "items": {"type": "string"}, "default": ["main", "master", "production"]}, "coverage_threshold": {"type": "number", "description": "Minimum test coverage percentage (0-100)", "minimum": 0, "maximum": 100, "default": 80}, "branch_coverage_threshold": {"type": "number", "description": "Minimum branch coverage percentage (0-100)", "minimum": 0, "maximum": 100, "default": 70}, "require_conventional_commits": {"type": "boolean", "description": "Enforce conventional commit format", "default": true}, "auto_add_verification_section": {"type": "boolean", "description": "Automatically add verification section to commit messages", "default": true}, "backup_before_destructive": {"type": "boolean", "description": "Create backup stash before destructive operations", "default": true}}, "required": ["pre_commit_checks"], "additionalProperties": false}